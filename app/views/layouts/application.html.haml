!!!
%html
  %head
    %title Pubmed
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    = yield

// use devise		
.notice
= notice
.alert
= alert

%hr

%p{:style => "float: right;"}
  - if user_signed_in?
    %p= current_user.username
    = link_to "logout", destroy_user_session_path, :method => :delete
  - else
    = link_to "login", new_user_session_path

